{
  "name": "planview",
  "version": "0.1.0",
  "description": "HTML5 Canvas based library for generating diagrams",
  "license": "MIT",
  "repository": "nihalvaria/planview",
  "main": "dist/index.js",
  "keywords": [
    "planview",
    "HTML5",
    "canvas"
  ],
  "author": "nihalvaria",
  "module": "dist/planview.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/planview.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/planview.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
